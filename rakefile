require 'bundler/setup'
require "#{File.dirname(__FILE__)}/Testing/features/support/app_client"
require "#{File.dirname(__FILE__)}/lib/configuration"
require 'rake'

ROOT_DIR = "#{File.dirname(__FILE__)}"

namespace :local do
  task :start do
    MyPetProject::AppClient.configure 'localhost:4567'
    MyPetProject::AppClient.start
    include MyPetProject::AppClient
  end
  task :stop do
    MyPetProject::AppClient.stop
    include MyPetProject::AppClient
  end
end